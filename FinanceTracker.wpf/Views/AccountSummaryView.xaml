<UserControl x:Class="FinanceTracker.wpf.Views.AccountSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:FinanceTracker.wpf.Converters">

    <UserControl.Resources>
        <conv:BalanceToBrushConverter x:Key="BalanceToBrushConverter" />
    </UserControl.Resources>

    <Border Background="White"
            CornerRadius="8"
            Padding="10"
            Margin="15,0,0,0">
        <StackPanel>
            <TextBlock Text="Accounts"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <ItemsControl ItemsSource="{Binding AccountBalances}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="SemiBold"
                                       DockPanel.Dock="Left"/>

                            <TextBlock Text="{Binding Balance}"
                                       HorizontalAlignment="Right"
                                       Foreground="{Binding Balance, Converter={StaticResource BalanceToBrushConverter}}"/>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Separator Margin="0,8,0,4"/>

            <DockPanel>
                <TextBlock Text="Total:"
                           FontWeight="Bold"
                           DockPanel.Dock="Left"/>

                <TextBlock Text="{Binding TotalBalance}"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Foreground="{Binding TotalBalance, Converter={StaticResource BalanceToBrushConverter}}"/>
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
