<UserControl x:Class="FinanceTracker.wpf.Views.CategorySummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:FinanceTracker.wpf.Converters">

    <UserControl.Resources>
        <conv:BalanceToBrushConverter x:Key="BalanceToBrushConverter" />
    </UserControl.Resources>

    <Border Background="White"
            CornerRadius="8"
            Padding="10"
            Margin="15,0,0,0">
        <StackPanel>
            <TextBlock Text="Categories"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <ItemsControl ItemsSource="{Binding CategorySummaries}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="SemiBold"
                                       DockPanel.Dock="Left"/>

                            <TextBlock Text="{Binding TotalAmount}"
                                       HorizontalAlignment="Right"
                                       Foreground="{Binding TotalAmount, Converter={StaticResource BalanceToBrushConverter}}"/>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Separator Margin="0,8,0,4"/>

            <DockPanel>
                <TextBlock Text="Income:"
                           FontWeight="Bold"
                           DockPanel.Dock="Left"/>

                <TextBlock Text="{Binding TotalIncome}"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Foreground="{Binding TotalIncome, Converter={StaticResource BalanceToBrushConverter}}"/>
            </DockPanel>

            <DockPanel Margin="0,4,0,0">
                <TextBlock Text="Expenses:"
                           FontWeight="Bold"
                           DockPanel.Dock="Left"/>

                <TextBlock Text="{Binding TotalExpenses}"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Foreground="{Binding TotalExpenses, Converter={StaticResource BalanceToBrushConverter}}"/>
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
