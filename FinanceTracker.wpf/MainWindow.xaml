<Window x:Class="FinanceTracker.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.wpf"
        xmlns:vm="clr-namespace:FinanceTracker.wpf.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" Margin="0,0,10,0"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="100" Margin="0,0,10,0"
                     Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"/>
            <CheckBox Content="Income" Margin="0,0,10,0" IsChecked="{Binding IsIncome}"/>
            <Button Content="Add" Width="80" Command="{Binding AddCommand}"/>
            <Button Content="Load" Width="80" Margin="10,0,0,0" Command="{Binding LoadCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Transactions}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="100"/>
                <DataGridCheckBoxColumn Header="Income" Binding="{Binding IsIncome}" Width="80"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
